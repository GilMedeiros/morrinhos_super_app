                            <p id="modalDataCriacao" class="text-muted mb-3">-</p>
                            
                            <h6><i class="bi bi-file-text me-1"></i>Descrição</h6>
                            <p id="modalDescricao" class="text-muted mb-3">-</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="bi bi-flag me-1"></i>Status</h6>
                            <p id="modalStatus" class="mb-3">-</p>
                            
                            <h6><i class="bi bi-graph-up me-1"></i>Progresso</h6>
                            <div class="progress mb-2" style="height: 8px;">
                                <div id="modalProgressBar" class="progress-bar" style="width: 0%"></div>
                            </div>
                            <small id="modalProgressText" class="text-muted">0 de 0 processados</small>
                        </div>
                    </div>

                    <!-- Configuração do Tipo de Mensagem -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h6 class="mb-0">
                                        <i class="bi bi-chat-square-text me-2"></i>
                                        Configuração Obrigatória
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6><i class="bi bi-tag me-1"></i>Tipo da Mensagem *</h6>
                                            <select class="form-select" id="modalTipoMensagem" required>
                                                <option value="">Selecione o tipo da mensagem...</option>
                                                <option value="informativo">Informativo</option>
                                                <option value="cobranca">Cobrança</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <h6><i class="bi bi-info-circle me-1"></i>Descrição</h6>
                                            <div id="modalDescricaoTipo" class="alert alert-light mb-0" style="min-height: 60px; display: flex; align-items: center;">
                                                <span class="text-muted">
                                                    <i class="bi bi-arrow-left me-2"></i>
                                                    Selecione um tipo para ver a descrição
