                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-danger" id="btnDeletarDisparo">
                                <i class="bi bi-trash me-2"></i>
                                Deletar
                            </button>
                            <button type="button" class="btn btn-warning" id="btnPausarDisparo">
                                <i class="bi bi-pause-circle me-2"></i>
                                Pausar
                            </button>
                            <button type="button" class="btn btn-info" id="btnEditarDisparo">
                                <i class="bi bi-pencil me-2"></i>
                                Editar
