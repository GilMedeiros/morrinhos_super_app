                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Carregando...</span>
                    </div>
                    <p class="mt-3 text-muted">Carregando disparos...</p>
                </div>
            </div>
        </div>

        <!-- Disparos Grid -->
        <div class="row justify-content-center d-none" id="disparosContainer">
            <div class="col-lg-11">
                <div class="row" id="disparosGrid">
                    <!-- Disparos will be loaded here -->
                </div>
            </div>
        </div>

        <!-- Empty State -->
        <div class="row justify-content-center d-none" id="emptyState">
            <div class="col-lg-6">
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h3 class="mt-3">Nenhum disparo encontrado</h3>
                    <p class="text-muted">Ainda não há disparos criados no sistema.</p>
                    <a href="/disparo" class="btn btn-custom">
                        <i class="bi bi-plus-circle me-2"></i>
                        Criar Primeiro Disparo
                    </a>
                </div>
            </div>
        </div>

        <!-- Error State -->
