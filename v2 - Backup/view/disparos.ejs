    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- JavaScript Customizado -->
    <script>
        // Estado da aplicação
        let allDisparos = [];
        let filteredDisparos = [];
        let currentDisparo = null;

        // Elementos DOM
        const loadingState = document.getElementById('loadingState');
        const disparosContainer = document.getElementById('disparosContainer');
        const disparosGrid = document.getElementById('disparosGrid');
        const emptyState = document.getElementById('emptyState');
        const errorState = document.getElementById('errorState');
        const errorMessage = document.getElementById('errorMessage');
        const searchDisparos = document.getElementById('searchDisparos');

        // Inicializar quando a página carregar
        document.addEventListener('DOMContentLoaded', function() {
            loadDisparos();
            setupEventListeners();
            loadQueueStatus(); // Carregar status da fila
        });

        // Configurar event listeners
        function setupEventListeners() {
            // Busca
            searchDisparos.addEventListener('input', debounce(filterDisparos, 300));
            
            // Filtros de status
            document.querySelectorAll('input[name="statusFilter"]').forEach(input => {
                input.addEventListener('change', filterDisparos);
            });
            
            // Tipo de mensagem no modal
            const tipoMensagemSelect = document.getElementById('modalTipoMensagem');
            tipoMensagemSelect.addEventListener('change', function() {
                atualizarDescricaoTipoMensagem(this.value);
            });
            
            // Event listeners para botões da fila
            const btnStartQueue = document.getElementById('btnStartQueue');
            const btnStopQueue = document.getElementById('btnStopQueue');
            
            if (btnStartQueue) {
                btnStartQueue.addEventListener('click', startQueue);
            }
            
            if (btnStopQueue) {
                btnStopQueue.addEventListener('click', stopQueue);
            }
        }

        // Carregar disparos da API
        async function loadDisparos() {
            showState('loading');
            
            try {
                const response = await fetch('/api/disparos');
                
                if (!response.ok) {
                    throw new Error(`Erro HTTP: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (data.status === 'success') {
                    allDisparos = data.data;
                    filteredDisparos = [...allDisparos];
                    
                    if (allDisparos.length === 0) {
                        showState('empty');
                    } else {
                        renderDisparos();
                        showState('disparos');
                    }
                } else {
                    throw new Error(data.message || 'Erro desconhecido');
                }
                
            } catch (error) {
                console.error('Erro ao carregar disparos:', error);
                errorMessage.textContent = error.message;
                showState('error');
            }
        }

        // Mostrar diferentes estados da interface
        function showState(state) {
            loadingState.classList.add('d-none');
            disparosContainer.classList.add('d-none');
            emptyState.classList.add('d-none');
            errorState.classList.add('d-none');
            
            switch (state) {
                case 'loading':
                    loadingState.classList.remove('d-none');
                    break;
                case 'disparos':
                    disparosContainer.classList.remove('d-none');
                    break;
                case 'empty':
                    emptyState.classList.remove('d-none');
                    break;
                case 'error':
                    errorState.classList.remove('d-none');
                    break;
            }
        }

        // Renderizar disparos na grade
        function renderDisparos() {
            disparosGrid.innerHTML = '';
            
            if (filteredDisparos.length === 0) {
                disparosGrid.innerHTML = `
                    <div class="col-12">
                        <div class="text-center py-4">
                            <i class="bi bi-search display-4 text-muted"></i>
                            <h5 class="mt-3">Nenhum resultado encontrado</h5>
                            <p class="text-muted">Tente ajustar os filtros de busca.</p>
                        </div>
                    </div>
                `;
                return;
            }
            
            filteredDisparos.forEach(disparo => {
                const disparoCard = createDisparoCard(disparo);
                disparosGrid.appendChild(disparoCard);
            });
        }

        // Criar card para um disparo
        function createDisparoCard(disparo) {
            const col = document.createElement('div');
            col.className = 'col-md-6 col-lg-4 mb-4';
            
            const statusClass = getStatusClass(disparo.status);
            const statusIcon = getStatusIcon(disparo.status);
            const statusText = getStatusText(disparo.status);
            const dataCriacao = new Date(disparo.data_criacao).toLocaleDateString('pt-BR', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
            
            // Calcular progresso
            const totalSolicitacoes = disparo.total_solicitacoes || 0;
            const processadas = disparo.solicitacoes_enviadas || 0;
            const progresso = totalSolicitacoes > 0 ? Math.round((processadas / totalSolicitacoes) * 100) : 0;
            
            col.innerHTML = `
                <div class="card disparo-card h-100">
                    <div class="card-header bg-white border-bottom">
                        <div class="d-flex justify-content-between align-items-start">
                            <h6 class="mb-0 text-truncate" title="${disparo.nome}">${disparo.nome}</h6>
                            <span class="badge ${statusClass} status-badge ms-2">
                                <i class="${statusIcon} me-1"></i>
                                ${statusText}
                            </span>
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <div class="disparo-info mb-3">
                            <div class="row g-2 mb-2">
                                <div class="col-6">
                                    <small class="text-muted d-block">Criado em</small>
                                    <small class="fw-bold">${dataCriacao}</small>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Lista Origem</small>
                                    <small class="fw-bold">${disparo.source_nome}</small>
                                </div>
                            </div>
                            
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Total Devedores</small>
                                    <span class="badge bg-primary">${totalSolicitacoes}</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Processados</small>
                                    <span class="badge bg-success">${processadas}</span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Progress Bar -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="text-muted">Progresso</small>
                                <small class="fw-bold">${progresso}%</small>
                            </div>
                            <div class="progress progress-mini">
                                <div class="progress-bar ${getProgressBarClass(progresso)}" 
                                     style="width: ${progresso}%"></div>
                            </div>
                        </div>
                        
                        ${disparo.descricao ? `
                            <div class="mb-3">
                                <small class="text-muted d-block">Descrição</small>
                                <small class="text-truncate d-block" title="${disparo.descricao}">${disparo.descricao}</small>
                            </div>
                        ` : ''}
                    </div>
                    
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary btn-action flex-fill" onclick="verDetalhes(${disparo.id})">
                                <i class="bi bi-eye me-1"></i>
                                Detalhes
                            </button>
                            <button class="btn btn-outline-warning btn-action" onclick="editarDisparo(${disparo.id})" 
                                    ${disparo.status === 'executando' ? 'disabled' : ''}>
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-success btn-action" onclick="executarDisparo(${disparo.id})"
                                    ${disparo.status === 'executando' || disparo.status === 'concluido' ? 'disabled' : ''}>
                                <i class="bi bi-play-circle"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
            
            return col;
        }

        // Filtrar disparos
        function filterDisparos() {
            const searchTerm = searchDisparos.value.toLowerCase();
            const statusFilter = document.querySelector('input[name="statusFilter"]:checked').value;
            
            filteredDisparos = allDisparos.filter(disparo => {
                const matchesSearch = disparo.nome.toLowerCase().includes(searchTerm) ||
                                    disparo.source_nome.toLowerCase().includes(searchTerm);
                const matchesStatus = statusFilter === 'all' || disparo.status === statusFilter;
                
                return matchesSearch && matchesStatus;
            });
            
            renderDisparos();
        }

        // Ver detalhes do disparo
        async function verDetalhes(disparoId) {
            try {
                const response = await fetch(`/api/disparos/${disparoId}`);
                const data = await response.json();
                
                if (data.status === 'success') {
                    console.log('Dados do disparo recebidos:', data.data);
                    currentDisparo = data.data;
                    populateModalDetalhes(currentDisparo);
                    
                    const modal = new bootstrap.Modal(document.getElementById('modalDetalhesDisparo'));
                    modal.show();
                } else {
                    throw new Error(data.message || 'Erro ao carregar detalhes');
                }
            } catch (error) {
                console.error('Erro ao carregar detalhes:', error);
                mostrarToast('Erro ao carregar detalhes do disparo: ' + error.message, 'danger');
            }
        }

        // Popular modal com detalhes
        function populateModalDetalhes(disparo) {
            document.getElementById('modalDisparoNome').textContent = disparo.nome;
            document.getElementById('modalDataCriacao').textContent = formatarDataHora(disparo.data_criacao);
            document.getElementById('modalDescricao').textContent = disparo.descricao || 'Sem descrição';
            
            // Status
            const statusBadge = `<span class="badge ${getStatusClass(disparo.status)}">${getStatusText(disparo.status)}</span>`;
            document.getElementById('modalStatus').innerHTML = statusBadge;
            
            // Tipo de mensagem (carregar valor salvo ou deixar em branco para exigir seleção)
            const tipoMensagemSelect = document.getElementById('modalTipoMensagem');
