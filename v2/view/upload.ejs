<!DOCTYPE html>
<html lang="pt-BR">

<%- include('partials/header') %>
<body>
<%- include('partials/nav') %>
    <!-- Main Content -->
    <div class="main-container">
        <!-- Logo Section -->
        <div class="logo-compact">
            <img src="img/conecta.png" alt="Logo Conecta" style="height: 40px; margin-right: 10px;">
            <img src="img/morrinhos.png" alt="Logo Morrinhos" style="height: 40px;">
        </div>

        <!-- Main Card -->
        <div class="card main-card">
            <div class="card-header">
                <h2 class="mb-1">
                    <i class="bi bi-cloud-upload me-2"></i>
                    Upload de PDF
                </h2>
                <p class="mb-0 opacity-75">Extraia dados de solicitações médicas</p>
            </div>
            
            <div class="card-body">
                <!-- Upload Area -->
                <div class="upload-area" id="uploadArea">
                    <i class="bi bi-cloud-upload upload-icon"></i>
                    <h5 class="mb-2">Arraste seu PDF aqui</h5>
                    <p class="text-muted mb-3">ou clique para selecionar</p>
                    <button type="button" class="btn btn-custom" id="selectFileBtn">
                        <i class="bi bi-file-plus me-2"></i>
                        Selecionar Arquivo
                    </button>
                    <input type="file" id="fileInput" class="d-none" accept=".pdf">
                </div>

                <!-- Informações Compactas -->
                <div class="info-compact">
                    <small>
                        <i class="bi bi-info-circle me-1"></i>
                        Máximo: <strong id="maxPages">5</strong> páginas | <strong>50MB</strong> | Apenas <strong>.PDF</strong>
                    </small>
                </div>

                <!-- File Info -->
                <div class="d-none result-card result-success" id="fileInfo">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">
                                <i class="bi bi-file-check me-2"></i>
                                <span id="fileName">arquivo.pdf</span>
                            </h6>
                            <small class="text-muted" id="fileSize">0 KB</small>
                        </div>
                        <button type="button" class="btn btn-custom" id="processBtn">
                            <i class="bi bi-gear me-2"></i>
                            Processar
                        </button>
                    </div>
                </div>

                <!-- Progress -->
                <div class="d-none" id="progressContainer">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="fw-bold">Processando PDF...</span>
                        <span id="progressText">0%</span>
                    </div>
                    <div class="progress-custom">
                        <div class="progress-bar-custom" id="progressBar" style="width: 0%"></div>
                    </div>
                </div>

                <!-- Result Area -->
                <div class="d-none" id="resultArea">
                    <div class="result-card" id="resultCard">
                        <h5 id="resultTitle" class="mb-3"></h5>
                        <div id="resultContent"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- JavaScript Customizado -->
    <script src="js/script.js"></script>
</body>
</html>

