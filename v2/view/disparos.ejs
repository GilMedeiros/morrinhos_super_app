<!DOCTYPE html>
<html lang="pt-BR">
<%- include('partials/header') %>
<body>
<%- include('partials/nav') %>
    <!-- Main Content -->
    <div class="container-fluid mt-3">
        <!-- Header Section -->
        <div class="text-center mb-4">
            <div class="d-flex justify-content-center gap-3 align-items-center mb-3">
                <img src="img/conecta.png" alt="Logo Conecta" style="height: 40px;">
                <img src="img/morrinhos.png" alt="Logo Morrinhos" style="height: 40px;">
            </div>
        </div>

        <!-- Page Header -->
        <div class="row justify-content-center">
            <div class="col-lg-11">
                <div class="card main-card mb-4">
                    <div class="card-header text-center">
                        <h2 class="mb-1">
                            <i class="bi bi-list-check me-2"></i>
                            Gerenciar Disparos
                        </h2>
                        <p class="mb-0 opacity-75">Visualize e gerencie suas listas de disparo criadas</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Queue Control Panel -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-11">
                <div class="card border-success">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-list-task me-2"></i>
                            Controle da Fila de Disparos
                        </h5>
                        <div class="d-flex gap-2">
                            <button class="btn btn-light btn-sm" id="btnStartQueue">
                                <i class="bi bi-play-fill me-1"></i>Iniciar Fila
                            </button>
                            <button class="btn btn-danger btn-sm" id="btnStopQueue">
                                <i class="bi bi-stop-fill me-1"></i>Parar Fila
                            </button>
                            <button class="btn btn-warning btn-sm" onclick="refreshQueueStatus()">
                                <i class="bi bi-arrow-clockwise me-1"></i>Atualizar
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div id="queueInfo" class="border rounded p-3 bg-light">
                                    <h6 class="text-success mb-3">Status da Fila</h6>
                                    <p class="mb-2"><strong>Status:</strong> <span id="queueStatusText" class="badge bg-secondary">Carregando...</span></p>
                                    <p class="mb-2"><strong>Intervalo:</strong> <span id="queueInterval">20-30 segundos</span></p>
                                    <p class="mb-0"><strong>Máx. Tentativas:</strong> <span id="queueMaxRetries">3</span></p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div id="queueStats" class="border rounded p-3 bg-light">
                                    <h6 class="text-info mb-3">Estatísticas</h6>
                                    <p class="mb-2"><strong>Na Fila:</strong> <span id="filaPendentes" class="badge bg-info">0</span></p>
                                    <p class="mb-2"><strong>Enviadas:</strong> <span id="filaEnviadas" class="badge bg-success">0</span></p>
                                    <p class="mb-0"><strong>Erro:</strong> <span id="filaErros" class="badge bg-danger">0</span></p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div id="queueProgress" class="border rounded p-3 bg-light">
                                    <h6 class="text-warning mb-3">Progresso</h6>
                                    <div class="mb-2">
                                        <div class="d-flex justify-content-between">
                                            <small>Processamento</small>
                                            <small id="progressPercent">0%</small>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar" id="progressBar" style="width: 0%"></div>
                                        </div>
                                    </div>
                                    <p class="mb-0 small"><strong>Próximo Envio:</strong> <span id="nextSend">-</span></p>
                                    <div class="text-center mt-3">
                                        <a href="/configuracoes" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-gear-fill me-1"></i>Configurações Avançadas
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters and Stats -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-11">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                                    <input type="text" class="form-control" id="searchDisparos" placeholder="Buscar por nome do disparo...">
                                </div>
                            </div>
                            <div class="col-md-6 text-md-end mt-2 mt-md-0">
                                <div class="btn-group" role="group">
                                    <input type="radio" class="btn-check" name="statusFilter" id="filterAll" value="all" checked>
                                    <label class="btn btn-outline-primary btn-sm" for="filterAll">Todos</label>
                                    
                                    <input type="radio" class="btn-check" name="statusFilter" id="filterCriado" value="criado">
                                    <label class="btn btn-outline-secondary btn-sm" for="filterCriado">Criados</label>
                                    
                                    <input type="radio" class="btn-check" name="statusFilter" id="filterExecutando" value="executando">
                                    <label class="btn btn-outline-warning btn-sm" for="filterExecutando">Executando</label>
                                    
                                    <input type="radio" class="btn-check" name="statusFilter" id="filterConcluido" value="concluido">
                                    <label class="btn btn-outline-success btn-sm" for="filterConcluido">Concluídos</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Loading State -->
        <div class="row justify-content-center" id="loadingState">
            <div class="col-lg-11">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Carregando...</span>
                    </div>
                    <p class="mt-3 text-muted">Carregando disparos...</p>
                </div>
            </div>
        </div>

        <!-- Disparos Grid -->
        <div class="row justify-content-center d-none" id="disparosContainer">
            <div class="col-lg-11">
                <div class="row" id="disparosGrid">
                    <!-- Disparos will be loaded here -->
                </div>
            </div>
        </div>

        <!-- Empty State -->
        <div class="row justify-content-center d-none" id="emptyState">
            <div class="col-lg-6">
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h3 class="mt-3">Nenhum disparo encontrado</h3>
                    <p class="text-muted">Ainda não há disparos criados no sistema.</p>
                    <a href="/disparo" class="btn btn-custom">
                        <i class="bi bi-plus-circle me-2"></i>
                        Criar Primeiro Disparo
                    </a>
                </div>
            </div>
        </div>

        <!-- Error State -->
        <div class="row justify-content-center d-none" id="errorState">
            <div class="col-lg-6">
                <div class="result-card result-error text-center">
                    <i class="bi bi-exclamation-triangle display-4 mb-3"></i>
                    <h4>Erro ao carregar disparos</h4>
                    <p id="errorMessage" class="mb-3">Ocorreu um erro ao buscar os disparos.</p>
                    <button class="btn btn-custom" onclick="loadDisparos()">
                        <i class="bi bi-arrow-clockwise me-2"></i>
                        Tentar Novamente
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Detalhes do Disparo -->
    <div class="modal fade modal-disparo-detalhes" id="modalDetalhesDisparo" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-info-circle me-2"></i>
                        Detalhes do Disparo - <span id="modalDisparoNome"></span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- Informações Gerais -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6><i class="bi bi-calendar me-1"></i>Data de Criação</h6>
                            <p id="modalDataCriacao" class="text-muted mb-3">-</p>
                            
                            <h6><i class="bi bi-file-text me-1"></i>Descrição</h6>
                            <p id="modalDescricao" class="text-muted mb-3">-</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="bi bi-flag me-1"></i>Status</h6>
                            <p id="modalStatus" class="mb-3">-</p>
                            
                            <h6><i class="bi bi-graph-up me-1"></i>Progresso</h6>
                            <div class="progress mb-2" style="height: 8px;">
                                <div id="modalProgressBar" class="progress-bar" style="width: 0%"></div>
                            </div>
                            <small id="modalProgressText" class="text-muted">0 de 0 processados</small>
                        </div>
                    </div>

                    <!-- Configuração da Mensagem -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h6 class="mb-0">
                                        <i class="bi bi-chat-square-text me-2"></i>
                                        Mensagem
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <textarea id="modalMensagemPersonalizada" class="form-control" rows="4" 
                                                placeholder="Digite aqui a mensagem que será enviada..."></textarea>
                                            <small class="text-muted mt-2">
                                                Você pode usar as seguintes variáveis que serão substituídas pelos dados de cada registro:
                                                <ul class="mt-2" id="listaVariaveisDinamicas"></ul>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Lista de Devedores -->
                    <h6><i class="bi bi-people me-1"></i>Devedores Incluídos</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-devedores">
                            <thead class="table-light" id="dinamicThead"></thead>
                            <tbody id="modalListaDevedores">
                                <!-- Devedores serão carregados aqui -->
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="d-flex justify-content-between w-100">
                        <div>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-danger" id="btnDeletarDisparo">
                                <i class="bi bi-trash me-2"></i>
                                Deletar
                            </button>
                            <button type="button" class="btn btn-warning" id="btnPausarDisparo">
                                <i class="bi bi-pause-circle me-2"></i>
                                Pausar
                            </button>
                            <button type="button" class="btn btn-success" id="btnExecutarDisparo">
                                <i class="bi bi-play-circle me-2"></i>
                                Executar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- JavaScript Customizado -->
    <script>
        // Tipos de mensagem e colunas obrigatórias (escopo global)
        const obrigatoriedadePorTipo = {
            '1_notificacao': ['nome', 'telefone', 'debito','tipo'],
            '2_notificacao': ['nome', 'telefone','prazo'],
            '3_notificacao': ['nome', 'telefone', 'duam'],
            '4_notificacao': ['nome', 'telefone','duam'],
            '5_notificacao': ['nome', 'telefone']
        };

        // Estado da aplicação
        let allDisparos = [];
        let filteredDisparos = [];
        let currentDisparo = null;

        // Elementos DOM
        const loadingState = document.getElementById('loadingState');
        const disparosContainer = document.getElementById('disparosContainer');
        const disparosGrid = document.getElementById('disparosGrid');
        const emptyState = document.getElementById('emptyState');
        const errorState = document.getElementById('errorState');
        const errorMessage = document.getElementById('errorMessage');
        const searchDisparos = document.getElementById('searchDisparos');

        // Inicializar quando a página carregar
        document.addEventListener('DOMContentLoaded', function() {
            loadDisparos();
            setupEventListeners();
            loadQueueStatus(); // Carregar status da fila
        });

        // Configurar event listeners
        function setupEventListeners() {
            // Busca
            searchDisparos.addEventListener('input', debounce(filterDisparos, 300));
            
            // Filtros de status
            document.querySelectorAll('input[name="statusFilter"]').forEach(input => {
                input.addEventListener('change', filterDisparos);
            });
            
            // Observers do modal (mensagem personalizada)
            // Nota: o select de tipo de mensagem foi removido no novo fluxo.
            // Mantemos a função de descrição disponível, caso seja usada em outro lugar.
            
            // Event listeners para botões da fila
            const btnStartQueue = document.getElementById('btnStartQueue');
            const btnStopQueue = document.getElementById('btnStopQueue');
            
            if (btnStartQueue) {
                btnStartQueue.addEventListener('click', startQueue);
            }
            
            if (btnStopQueue) {
                btnStopQueue.addEventListener('click', stopQueue);
            }
        }

        // Carregar disparos da API
        async function loadDisparos() {
            showState('loading');
            
            try {
                const response = await fetch('/api/disparos');
                
                if (!response.ok) {
                    throw new Error(`Erro HTTP: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (data.status === 'success') {
                    allDisparos = data.data;
                    filteredDisparos = [...allDisparos];
                    
                    if (allDisparos.length === 0) {
                        showState('empty');
                    } else {
                        renderDisparos();
                        showState('disparos');
                    }
                } else {
                    throw new Error(data.message || 'Erro desconhecido');
                }
                
            } catch (error) {
                console.error('Erro ao carregar disparos:', error);
                errorMessage.textContent = error.message;
                showState('error');
            }
        }

        // Mostrar diferentes estados da interface
        function showState(state) {
            loadingState.classList.add('d-none');
            disparosContainer.classList.add('d-none');
            emptyState.classList.add('d-none');
            errorState.classList.add('d-none');
            
            switch (state) {
                case 'loading':
                    loadingState.classList.remove('d-none');
                    break;
                case 'disparos':
                    disparosContainer.classList.remove('d-none');
                    break;
                case 'empty':
                    emptyState.classList.remove('d-none');
                    break;
                case 'error':
                    errorState.classList.remove('d-none');
                    break;
            }
        }

        // Renderizar disparos na grade
        function renderDisparos() {
            disparosGrid.innerHTML = '';
            
            if (filteredDisparos.length === 0) {
                disparosGrid.innerHTML = `
                    <div class="col-12">
                        <div class="text-center py-4">
                            <i class="bi bi-search display-4 text-muted"></i>
                            <h5 class="mt-3">Nenhum resultado encontrado</h5>
                            <p class="text-muted">Tente ajustar os filtros de busca.</p>
                        </div>
                    </div>
                `;
                return;
            }
            
            filteredDisparos.forEach(disparo => {
                const disparoCard = createDisparoCard(disparo);
                disparosGrid.appendChild(disparoCard);
            });
        }

        // Criar card para um disparo
        function createDisparoCard(disparo) {
            const col = document.createElement('div');
            col.className = 'col-md-6 col-lg-4 mb-4';
            
            const statusClass = getStatusClass(disparo.status);
            const statusIcon = getStatusIcon(disparo.status);
            const statusText = getStatusText(disparo.status);
            const dataCriacao = new Date(disparo.data_disparo).toLocaleDateString('pt-BR', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
            
            // Calcular progresso
            const totalSolicitacoes = disparo.total_solicitacoes_vinculadas || 0;
            const processadas = disparo.resultado?.total_processadas || 0;
            const falhas = disparo.resultado?.erros || 0;
            const sucesso = disparo.resultado?.sucessos || 0;
            const progresso = totalSolicitacoes > 0 ? Math.round((processadas / totalSolicitacoes) * 100) : 0;
            
            console.log('Renderizando disparo:', disparo);

            col.innerHTML = `
                <div class="card disparo-card h-100">
                    <div class="card-header bg-white border-bottom">
                        <div class="d-flex justify-content-between align-items-start">
                            <h6 class="mb-0 text-truncate" title="${disparo.nome}">${disparo.nome}</h6>
                            <span class="badge ${statusClass} status-badge ms-2">
                                <i class="${statusIcon} me-1"></i>
                                ${statusText}
                            </span>
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <div class="disparo-info mb-3">
                            <div class="row g-2 mb-2">
                                <div class="col-6">
                                    <small class="text-muted d-block">Criado em</small>
                                    <small class="fw-bold">${dataCriacao}</small>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Lista Origem</small>
                                    <small class="fw-bold">${disparo.source_nome}</small>
                                </div>
                            </div>
                            
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Total</small>
                                    <span class="badge bg-primary">${totalSolicitacoes}</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Processados</small>
                                    <span class="badge bg-warning">${processadas}</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Falhas</small>
                                    <span class="badge bg-danger">${falhas}</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Sucesso</small>
                                    <span class="badge bg-success">${sucesso}</span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Progress Bar -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="text-muted">Progresso</small>
                                <small class="fw-bold">${progresso}%</small>
                            </div>
                            <div class="progress progress-mini">
                                <div class="progress-bar ${getProgressBarClass(progresso)}" 
                                     style="width: ${progresso}%"></div>
                            </div>
                        </div>
                        
                        ${disparo.descricao ? `
                            <div class="mb-3">
                                <small class="text-muted d-block">Descrição</small>
                                <small class="text-truncate d-block" title="${disparo.descricao}">${disparo.descricao}</small>
                            </div>
                        ` : ''}
                    </div>
                    
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary btn-action flex-fill" onclick="verDetalhes(${disparo.id})">
                                <i class="bi bi-eye me-1"></i>
                                Detalhes
                            </button>
                            <button class="btn btn-success btn-action" onclick="executarDisparo(${disparo.id})"
                                    ${disparo.status === 'executando' || disparo.status === 'concluido' ? 'disabled' : ''}>
                                <i class="bi bi-play-circle"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
            
            return col;
        }

        // Filtrar disparos
        function filterDisparos() {
            const searchTerm = searchDisparos.value.toLowerCase();
            const statusFilter = document.querySelector('input[name="statusFilter"]:checked').value;
            
            filteredDisparos = allDisparos.filter(disparo => {
                const matchesSearch = disparo.nome.toLowerCase().includes(searchTerm) ||
                                    disparo.source_nome.toLowerCase().includes(searchTerm);
                const matchesStatus = statusFilter === 'all' || disparo.status === statusFilter;
                
                return matchesSearch && matchesStatus;
            });
            
            renderDisparos();
        }

        // Ver detalhes do disparo
        async function verDetalhes(disparoId) {
            try {
                const response = await fetch(`/api/disparos/${disparoId}`);
                const data = await response.json();
                
                if (data.status === 'success') {
                    console.log('Dados do disparo recebidos:', data.data);
                    currentDisparo = data.data;
                    populateModalDetalhes(currentDisparo);
                    
                    const modal = new bootstrap.Modal(document.getElementById('modalDetalhesDisparo'));
                    modal.show();
                } else {
                    throw new Error(data.message || 'Erro ao carregar detalhes');
                }
            } catch (error) {
                console.error('Erro ao carregar detalhes:', error);
                mostrarToast('Erro ao carregar detalhes do disparo: ' + error.message, 'danger');
            }
        }

        // Popular modal com detalhes
    function populateModalDetalhes(disparo) {
            try {
                // Elementos básicos
                document.getElementById('modalDisparoNome').textContent = disparo.nome;
                document.getElementById('modalDataCriacao').textContent = formatarDataHora(disparo.data_disparo);
                document.getElementById('modalDescricao').textContent = disparo.descricao || 'Sem descrição';
                
                // Status
                const statusBadge = `<span class="badge ${getStatusClass(disparo.status)}">${getStatusText(disparo.status)}</span>`;
                document.getElementById('modalStatus').innerHTML = statusBadge;
                
                // Mensagem personalizada
                const mensagemTextarea = document.getElementById('modalMensagemPersonalizada');
                if (mensagemTextarea) {
                    mensagemTextarea.value = disparo.mensagem_personalizada || disparo.configuracao?.mensagem_personalizada || '';
                    // Desabilitar se o disparo já estiver em andamento ou concluído
                    mensagemTextarea.disabled = ['executing', 'done'].includes(disparo.status);
                }

                // Lista dinâmica de variáveis
                const varsList = document.getElementById('listaVariaveisDinamicas');
                varsList.innerHTML = '';
                let dataKeys = [];
                if (disparo.solicitacoes && disparo.solicitacoes.length > 0) {
                    const primeiroData = disparo.solicitacoes[0]?.data || {};
                    dataKeys = Object.keys(primeiroData);
                }
                if(dataKeys.length === 0) {
                    varsList.innerHTML = '<li class="text-muted">Nenhuma variável dinâmica disponível.</li>';
                } else {
                    dataKeys.forEach(key => {
                        const li = document.createElement('li');
                        li.innerHTML = `<code>{${key}}</code> - Valor da coluna <b>${key}</b>`;
                        varsList.appendChild(li);
                    });
                }
                
                // Progresso
                const total = disparo.total_solicitacoes || 0;
                const processadas = disparo.solicitacoes_enviadas || 0;
                const progresso = total > 0 ? Math.round((processadas / total) * 100) : 0;
                
                const progressBar = document.getElementById('modalProgressBar');
                progressBar.style.width = `${progresso}%`;
                progressBar.className = `progress-bar ${getProgressBarClass(progresso)}`;
                document.getElementById('modalProgressText').textContent = `${processadas} de ${total} processados`;
            } catch (error) {
                console.error('Erro ao popular detalhes do modal:', error);
                mostrarToast('Erro ao carregar detalhes do disparo: ' + error.message, 'error');
            }
            // Status
            const statusBadge = `<span class="badge ${getStatusClass(disparo.status)}">${getStatusText(disparo.status)}</span>`;
            document.getElementById('modalStatus').innerHTML = statusBadge;

            // Mensagem personalizada (carregar valor salvo ou deixar em branco)
            const mensagemInput = document.getElementById('modalMensagemPersonalizada');
