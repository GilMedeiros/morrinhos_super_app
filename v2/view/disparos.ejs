        // Salvar configurações da fila
        async function saveQueueConfig() {
            try {
                const minInterval = parseInt(document.getElementById('queueMinInterval').value) * 1000;
                const maxInterval = parseInt(document.getElementById('queueMaxInterval').value) * 1000;
                const maxRetries = parseInt(document.getElementById('queueMaxRetries').value);
                const batchSize = parseInt(document.getElementById('queueBatchSize').value);

                // Validações básicas
                if (minInterval < 5000) {
                    mostrarToast('Intervalo mínimo deve ser pelo menos 5 segundos', 'danger');
                    return;
                }

                if (maxInterval <= minInterval) {
                    mostrarToast('Intervalo máximo deve ser maior que o mínimo', 'danger');
                    return;
                }

                if (maxRetries < 1 || maxRetries > 10) {
                    mostrarToast('Máximo de tentativas deve estar entre 1 e 10', 'danger');
                    return;
                }

                const configData = {
                    minInterval,
                    maxInterval,
                    maxRetries,
                    batchSize
                };

                const response = await fetch('/api/disparos/queue/config', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(configData)
                });

                const data = await response.json();
                
                if (data.status === 'success') {
                    mostrarToast('Configurações da fila salvas com sucesso!', 'success');
                    
                    // Atualizar status da fila após salvar
                    setTimeout(() => {
                        loadQueueStatus();
                    }, 1000);
                } else {
                    mostrarToast('Erro ao salvar configurações: ' + data.message, 'danger');
                }
                
            } catch (error) {
                console.error('Erro ao salvar configurações da fila:', error);
                mostrarToast('Erro ao salvar configurações da fila', 'danger');
            }
        }

