        // Executar disparo
        async function executarDisparo(disparoId) {
            const mensagemPersonalizada = document.getElementById('modalMensagemPersonalizada').value;
            if (!mensagemPersonalizada) {
                mostrarToast('Por favor, digite a mensagem antes de executar o disparo.', 'warning');
                document.getElementById('modalMensagemPersonalizada').focus();
                return;
            }
            
            // Verificar se há variáveis na mensagem
            const variaveis = mensagemPersonalizada.match(/\{([^}]+)\}/g);
            
            // Verificar se as variáveis existem nos dados
            if (variaveis && variaveis.length > 0) {
                let colunasDisponiveis = [];
                if (currentDisparo && Array.isArray(currentDisparo.solicitacoes) && currentDisparo.solicitacoes.length > 0) {
                    const primeiro = currentDisparo.solicitacoes[0];
                    if (primeiro.data && typeof primeiro.data === 'object') {
                        colunasDisponiveis = Object.keys(primeiro.data);
                    }
                }
                
                // Remover as chaves das variáveis para comparação
                const variaveisRequeridas = variaveis.map(v => v.replace(/[{}]/g, ''));
                
                const variaveisFaltando = variaveisRequeridas.filter(v => !colunasDisponiveis.includes(v));
                if (variaveisFaltando.length > 0) {
                    mostrarToast(
                        'Erro: As seguintes variáveis não existem nos dados: ' + variaveisFaltando.join(', '),
                        'danger'
                    );
                    return;
                }
            }

            if (!confirm('Tem certeza que deseja executar este disparo? Esta ação não pode ser desfeita.')) {
                return;
            }

            try {
                mostrarToast('Iniciando execução do disparo...', 'info');

                const response = await fetch(`/api/disparos/${disparoId}/execute`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        mensagem_personalizada: mensagemPersonalizada
                    })
                });

                const data = await response.json();

                if (data.status === 'success') {
                    const estimativa = data.data.estimativa_conclusao;
                    let message = `Disparo adicionado à fila com sucesso! ${data.data.total_solicitacoes} mensagens serão enviadas.`;
                    if (estimativa) {
                        message += ` Estimativa de conclusão: ${estimativa.estimated_minutes} minutos.`;
                    }
                    mostrarToast(message, 'success');
                    loadQueueStatus();
                    const modal = bootstrap.Modal.getInstance(document.getElementById('modalDetalhesDisparo'));
                    if (modal) { modal.hide(); }
                    setTimeout(() => { loadDisparos(); }, 1000);
                } else {
                    throw new Error(data.message || 'Erro ao executar disparo');
                }
            } catch (error) {
                console.error('Erro ao executar disparo:', error);
                mostrarToast('Erro ao executar disparo: ' + error.message, 'danger');
            }
        }

