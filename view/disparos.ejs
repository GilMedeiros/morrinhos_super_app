        // Validar template do payload em tempo real
        function validatePayloadTemplate() {
            const payloadTemplate = document.getElementById('payloadTemplate');
            const template = payloadTemplate.value.trim();
            
            if (!template) {
                payloadTemplate.classList.remove('is-invalid', 'is-valid');
                clearPayloadPreview();
                return true;
            }

            try {
                // Primeiro, tentar fazer parse direto para ver se j√° √© um JSON v√°lido
                try {
                    const directParse = JSON.parse(template);
                    // Se chegou aqui, √© um JSON v√°lido sem vari√°veis
                    payloadTemplate.classList.remove('is-invalid');
                    payloadTemplate.classList.add('is-valid');
                    showPayloadPreview(directParse);
                    addTestLog('‚úÖ Template JSON v√°lido', 'success');
                    return true;
                } catch {
                    // N√£o √© JSON v√°lido ainda, pode ter vari√°veis
                }

                // Criar um template de teste substituindo as vari√°veis por valores apropriados
                let testTemplate = template;
                
                // Substituir vari√°veis uma por uma de forma mais cuidadosa
                const replacements = [
                    { pattern: /"\{phone\}"/g, value: '"123456789"' },
                    { pattern: /\{phone\}/g, value: '"123456789"' },
                    { pattern: /"\{name\}"/g, value: '"Test Name"' },
                    { pattern: /\{name\}/g, value: '"Test Name"' },
                    { pattern: /"\{agendamento\}"/g, value: '"2024-01-01T10:00:00"' },
                    { pattern: /\{agendamento\}/g, value: '"2024-01-01T10:00:00"' },
                    { pattern: /"\{procedimento\}"/g, value: '"Test Procedure"' },
                    { pattern: /\{procedimento\}/g, value: '"Test Procedure"' },
                    { pattern: /"\{test\}"/g, value: 'false' },
                    { pattern: /\{test\}/g, value: 'false' }
                ];

                replacements.forEach(({ pattern, value }) => {
                    testTemplate = testTemplate.replace(pattern, value);
                });
                
                // Tentar fazer parse do JSON processado
                const parsed = JSON.parse(testTemplate);
                
                // Se chegou at√© aqui, o JSON √© v√°lido
                payloadTemplate.classList.remove('is-invalid');
                payloadTemplate.classList.add('is-valid');
                
                // Mostrar preview
                showPayloadPreview(parsed);
                addTestLog('‚úÖ Template JSON com vari√°veis v√°lido', 'success');
                return true;
                
            } catch (error) {
                payloadTemplate.classList.remove('is-valid');
                payloadTemplate.classList.add('is-invalid');
                
                // Mostrar erro no preview
                showPayloadPreview({ error: 'JSON inv√°lido: ' + error.message }, true);
                addTestLog('‚ùå Template JSON inv√°lido: ' + error.message, 'error');
                return false;
            }
        }

